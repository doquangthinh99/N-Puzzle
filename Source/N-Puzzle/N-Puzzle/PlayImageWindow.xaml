<Window x:Class="N_Puzzle.PlayImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:N_Puzzle"
        mc:Ignorable="d"
        Title="PlayImageWindow" Height="450" Width="800" MouseMove="Window_MouseMove" Loaded="Window_Loaded">

    <Canvas x:Name="ImageCanvas">
        <Menu x:Name="MainMenu">
            <MenuItem Header="_File">
                <MenuItem Name="NewGameItem" Header="_New Game" Click="NewGame_Click"></MenuItem>
                <MenuItem Name="PlayItem" Header="_Play" Click="PlayItem_Click" IsEnabled="False"></MenuItem>
                <MenuItem Name="SaveItem" Header="_Save" Click="SaveItem_Click" IsEnabled="False"></MenuItem>
                <MenuItem Name="LoadItem" Header="_Load" Click="LoadItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Canvas Name="previewCanvas" Height="300" Canvas.Left="300" Width="300"/>
    </Canvas>
</Window>
